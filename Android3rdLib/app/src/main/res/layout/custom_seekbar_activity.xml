<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:text="@string/custom_seekbar_title"/>

    <SeekBar
        android:id="@+id/sb_sys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"/>

    <com.wafe.android3rdlib.custom.customseekbar.VerticalSeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.wafe.android3rdlib.custom.customseekbar.VerticalSeekBar
            android:id="@+id/vsb_vertical"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:padding="15dp"
            android:max="100"
            android:progress="50"/>
        <!--android:progressDrawable="@drawable/custom_vertical_seekbar_bg"-->

            <com.wafe.android3rdlib.custom.customseekbar.CustomSeekbarView
                android:id="@+id/csbv_vertical"
                android:padding="15dp"
                android:layout_width="100dp"
                android:layout_height="200dp" />

    </LinearLayout>


</LinearLayout>
